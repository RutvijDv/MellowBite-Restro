    <body style="background-color: #f8f1f1">
        <section id="loginpage">
            <div>
                <div class="container" style="margin: auto !important; text-align: center; padding: 5% 0">
                    <div class="row" style="margin: 0; position: relative">


                        <div class="col-lg-6 slider">
                            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="img-fluid w-100" src="/images/login0.jpg" alt="First slide" />
                                    </div>
                                    <div class="carousel-item">
                                        <img class="img-fluid w-100" src="/images/login3.jpg" alt="Second slide" />
                                    </div>
                                    <div class="carousel-item">
                                        <img class="img-fuild w-100" src="/images/login2.jpg" alt="Third slide" />
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-lg-6">
                            <div class="row" style="position: relative; padding-top: 6rem">
