  <section id="reservation">
    <div class="blank-space">
      <div class="container">
        <div class="row" style="text-align: center">
          <div class="col-12">
            <div style="display: inline-block; width: fit-content;">
              <p class="cursive-lettering">Book Table</p>
              <p class="title-sans-lettering">Make Reservation</p>
            </div>
          </div>
        </div>

        <form id="reserve" name="reserve" action="/reservation" method="POST" onsubmit="return validate();"
         style="padding-top: 3rem;font-size: 1.2rem;font-weight: 400;">
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                id="inputName"
                placeholeder="name"
                required
              />
              <div class="validation" id="name" style="display: none">*Please use only alphabets.</div>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="phoneNumber">Phone Number</label>
              <input
                type="number"
                class="form-control"
                name="number"
                id="inputNumber"
                placeholder="phone number"
                required
              />
              <div class="validation" id="phone" style="display: none">*Please enter valid phone number(10 digits).</div>
            </div>
            <div class="form-group col-md-6">
              <label for="date">Number of People</label>
              <input
                type="number"
                class="form-control"
                name="no_of_people"
                id="people"
                placeholder="number"
                required
              />
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
                <label for="phoneNumber">Date</label>
                <input
                  type="date"
                  class="form-control"
                  name="date"
                  id="dineInDate"
                  required
                />
                <div class="validation" id="date" style="display: none">*Please enter a valid date.</div>
              </div>
              <div class="form-group col-md-6">
                <label for="phoneNumber">Time</label>
                <input
                  type="time"
                  class="form-control"
                  name="time"
                  id="inputTime"
                  required
                />
                <div class="validation" id="time" style="display: none">*Please enter valid time.</div>
              </div>
          </div>

          
          <button type="submit" class="btn btn-lg btn-light" name="button" >Reserve Table</button>
        </form>
      </div>
    </div>
  </section>

